{
  "name": "lium-e2e",
  "version": "1.0.0",
  "description": "E2E testing framework for Lium SOA",
  "private": true,
  "type": "module",
  "scripts": {
    "cli": "tsx ui/cli/index.ts",
    "test:unit": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:framework": "npm run test:unit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "k6",
    "lium"
  ],
  "author": "Lium Engineering",
  "license": "UNLICENSED",
  "dependencies": {
    "@playwright/test": "^1.41.0",
    "@slack/webhook": "^7.0.2",
    "ajv": "^8.12.0",
    "auth0": "^4.3.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "dotenv": "^16.4.1",
    "inquirer": "^9.2.14",
    "jsonwebtoken": "^9.0.2",
    "openapi-typescript": "^6.7.4",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
